@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Specialty


<h2>Specialty Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>


@if(@Model.JoinEntities3.Count == 0)
{
  <p>This Specialty does not contain any doctors</p>
}
else
{
  <h4>Doctors the Specialty contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities3)
  {
    <li>@join.Doctor.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to Specialties", "Index")</p>
<p>@Html.ActionLink("Edit Specialty", "Edit", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Add Doctor", "DocSpecialty", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Delete specialty", "Delete", new { id = Model.SpecialtyId })</p>
